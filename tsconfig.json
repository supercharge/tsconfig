{
  "display": "Node 12",
  "compilerOptions": {
    "target": "es2019",
    "declaration": true,
    "module": "commonjs",
    "lib": [
      "ES2019",
      "ES2020.Promise",
      "ES2020.BigInt",
      "ES2020.String",
      "DOM",
      "DOM.Iterable"
    ],
    "outDir": "dist",
    "newLine": "lf",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "strictNullChecks": true,
  },
  // "include": [
  //   "./**/*"
  // ],
  // "exclude": [
  //   "./node_modules",
  //   "./dist"
  // ]
}
