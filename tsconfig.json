{
  "compilerOptions": {
    "target": "es2019", // Node.js v12
    "declaration": true,
    "module": "commonjs",
    "lib": [
      "es2019",
      "DOM"
    ],
    "outDir": "dist",
    "newLine": "lf",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "strictNullChecks": true,
  },
  // "include": [
  //   "./**/*"
  // ],
  // "exclude": [
  //   "./node_modules",
  //   "./dist"
  // ]
}
